<Window x:Class='WpfApplication1.MainWindow'
		xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
		xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
		Title='Mini popup tasks'
		WindowStyle='None'
		Focusable='True'
		AllowsTransparency='True'
		Topmost='True'
		ShowInTaskbar='False'
		Background='Transparent'
		SizeToContent='WidthAndHeight'
		UseLayoutRounding='True'
		Loaded='Window_Loaded'
		PreviewKeyDown='Window_PreviewKeyDown'>
	<Grid Name='mainGrid'>
		<DockPanel LastChildFill='True'>
			<!--<StatusBar DockPanel.Dock='Bottom'>
				<StatusBarItem Name='statusbaritem1' Content='Press up/down/enter' />
			</StatusBar>-->
			<ListBox Name='listboxItems'
					 SelectionChanged='listbox1_SelectionChanged'
					 Focusable='False'
					 Background='Transparent'
					 BorderThickness='0'
					 PreviewKeyDown='listboxItems_PreviewKeyDown'>
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border CornerRadius='3'
								BorderBrush='#777'
								BorderThickness='1'
								ToolTip='{Binding Tooltip}'
								Background='{Binding DrawBrush}'
								MouseLeftButtonUp='itemBorder_MouseLeftButtonUp'>
							<TextBlock MinWidth='100'
									   Margin='5'
									   Text='{Binding Name}' />
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</DockPanel>
	</Grid>
</Window>
